{
  "manifest_version": 2,
  "name" : "GyaoDirectURL",
  "version" : "1.1",
  "description": "Display the URL of movie.",
  "icons" : { "128": "icon.png" },
  "options_page": "help.html",
  "content_scripts": [
    {
      "matches": ["http://gyao.yahoo.co.jp/player/*",
                  "http://gyao.yahoo.co.jp/p/*",
                  "http://gyao.yahoo.co.jp/my/pl/list/*m=detail"],
      "js": ["direct.js"]
    }],
  "permissions": [
    "http://player.gyao.yahoo.co.jp/wmp/makeAsxSl.php"
  ],
  "background": {
    "scripts": ["md5.js", "background.js"]
  }
}

